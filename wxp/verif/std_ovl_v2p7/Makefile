update:
	find . -name release_files.list -exec rm -f {} \;
	$(MAKE) update_dirs
	$(MAKE) release_files.list

update_dirs:
	cd docs && $(MAKE)
	cd sva05 && $(MAKE)
	cd vlog95 && $(MAKE)
	cd psl05 && $(MAKE)
	cd vhdl93 && $(MAKE)

release_files.list: Makefile gen_name_list
	@echo "Building release_files.list"
	@rm -f release_files.list
	@echo "# This file was generated by make" \
	  > release_files.list
	@echo "# Modify it by editing the RELEASE_LIST in Master.make" \
	  >> release_files.list
	@gen_name_list $(RELEASE_LIST) \
	  >> release_files.list
	@chmod -w release_files.list
