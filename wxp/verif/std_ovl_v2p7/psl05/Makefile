owner = sundar


% :: RCS/%,v ; $(CO) $(COFLAGS) $@


default_target: update update_dirs release_files.list

RELEASE_LIST = \
	assert_always_on_edge_psl_logic.v \
	assert_always_psl_logic.v \
	assert_change_psl_logic.v \
	assert_cycle_sequence_psl_logic.v \
	assert_decrement_psl_logic.v \
	assert_delta_psl_logic.v \
	assert_even_parity_psl_logic.v \
	assert_fifo_index_psl_logic.v \
	assert_frame_psl_logic.v \
	assert_handshake_psl_logic.v \
	assert_implication_psl_logic.v \
	assert_increment_psl_logic.v \
	assert_never_psl_logic.v \
	assert_never_unknown_psl_logic.v \
	assert_never_unknown_async_psl_logic.v \
	assert_next_psl_logic.v \
	assert_no_overflow_psl_logic.v \
	assert_no_transition_psl_logic.v \
	assert_no_underflow_psl_logic.v \
	assert_odd_parity_psl_logic.v \
	assert_one_cold_psl_logic.v \
	assert_one_hot_psl_logic.v \
	assert_proposition_psl_logic.v \
	assert_quiescent_state_psl_logic.v \
	assert_range_psl_logic.v \
	assert_time_psl_logic.v \
	assert_transition_psl_logic.v \
	assert_unchange_psl_logic.v \
	assert_width_psl_logic.v \
	assert_win_change_psl_logic.v \
	assert_window_psl_logic.v \
	assert_win_unchange_psl_logic.v \
	assert_zero_one_hot_psl_logic.v

update: $(RELEASE_LIST)

update_dirs:
	(cd vunits && $(MAKE))

release_files.list: Makefile ../gen_name_list
	@echo "Building release_files.list"
	@rm -f release_files.list
	@echo "# This file was generated by make" \
	  > release_files.list
	@echo "# Modify it by editing the RELEASE_LIST in Makefile" \
	  >> release_files.list
	@../gen_name_list $(RELEASE_LIST) \
	  >> release_files.list
	@chmod -w release_files.list
